        <StackLayout Margin="17" Spacing="11">
            <StackLayout>
                <Label Text="Ustawienia" TextColor="#000000" FontSize="Title" FontAttributes="Bold"/>
                <Frame BackgroundColor="{StaticResource Prim}" CornerRadius="9" Margin="0,7,0,0" HasShadow="True">
                    <StackLayout>
                        <Label Text="Some Text" TextColor="#FFFFFF"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
            <StackLayout>
                <Label Text="Informacje" TextColor="#000000" FontSize="Title" FontAttributes="Bold"/>
                <Frame BackgroundColor="{StaticResource Prim}" CornerRadius="9" Margin="0,7,0,0" HasShadow="True">
                    <StackLayout>
                        <Label Text="Some Text" TextColor="#FFFFFF"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>