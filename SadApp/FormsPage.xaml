                <sadApp:Form Lesson="Lekcja 1" FormName="Forma 1" PointsToGet="100" Background="{sadApp:Gradient}"/>
                <sadApp:Form Lesson="Lekcja 1" FormName="Forma 2" PointsToGet="100" Background="{sadApp:Gradient}"/>
                <sadApp:Form Lesson="Lekcja 2" FormName="Forma 1" PointsToGet="100" Background="{sadApp:Gradient}"/>
                <sadApp:Form Lesson="Lekcja 3" FormName="Forma 1" PointsToGet="100" Background="{sadApp:Gradient}"/>
